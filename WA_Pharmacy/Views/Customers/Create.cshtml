@model WA_Pharmacy.DTOs.Customer.CustomerEditDto

@{
    ViewData["Title"] = "ثبت مشتری جدید";
}

<div class="row">
    <div class="col-md-12">
        <div class="card card-success card-outline">
            <div class="card-header">
                <h3 class="card-title">
                    <i class="fa fa-user-plus ml-1"></i>
                    ثبت مشتری جدید
                </h3>
            </div>

            <form asp-action="Create">
                <div class="card-body">
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger" style="display:none;"></div>

                    <div class="row">
                        <div class="col-md-4">
                            <div class="form-group">
                                <label asp-for="NationalCode"></label>
                                <input asp-for="NationalCode" class="form-control" placeholder="کد ملی 10 رقمی" />
                                <span asp-validation-for="NationalCode" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="form-group">
                                <label asp-for="Name"></label>
                                <input asp-for="Name" class="form-control" placeholder="نام کوچک" />
                                <span asp-validation-for="Name" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="form-group">
                                <label asp-for="LastName"></label>
                                <input asp-for="LastName" class="form-control" placeholder="نام خانوادگی" />
                                <span asp-validation-for="LastName" class="text-danger"></span>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-4">
                            <div class="form-group">
                                <label asp-for="MobileNumber"></label>
                                <div class="input-group">
                                    <div class="input-group-prepend">
                                        <span class="input-group-text"><i class="fa fa-phone"></i></span>
                                    </div>
                                    <input asp-for="MobileNumber" class="form-control" placeholder="0912..." />
                                </div>
                                <span asp-validation-for="MobileNumber" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="form-group">
                                <label asp-for="Birthday"></label>
                                <input asp-for="Birthday" class="form-control pdate" placeholder="مثلا: 1402/01/01" autocomplete="off" readonly />
                                <span asp-validation-for="Birthday" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="form-group">
                                <label asp-for="Sex" class="d-block"></label>
                                <div class="form-check form-check-inline">
                                    <input class="form-check-input" type="radio" asp-for="Sex" value="true" id="sexMale" checked>
                                    <label class="form-check-label" for="sexMale">مرد</label>
                                </div>
                                <div class="form-check form-check-inline">
                                    <input class="form-check-input" type="radio" asp-for="Sex" value="false" id="sexFemale">
                                    <label class="form-check-label" for="sexFemale">زن</label>
                                </div>
                                <span asp-validation-for="Sex" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="card-footer bg-white">
                    <button type="submit" class="btn btn-success px-5">
                        <i class="fa fa-check ml-1"></i> ثبت اطلاعات
                    </button>
                    <a asp-action="Index" class="btn btn-secondary float-left">
                        <i class="fa fa-arrow-left ml-1"></i> بازگشت به لیست
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script>
        $(document).ready(function () {
            if (typeof initPersianDatepicker === 'function') {
                initPersianDatepicker('.pdate');
            }
        });
    </script>
}