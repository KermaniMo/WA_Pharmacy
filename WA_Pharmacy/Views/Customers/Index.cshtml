@model IEnumerable<WA_Pharmacy.DTOs.Customer.CustomerListDto>

@{
    ViewData["Title"] = "مدیریت مشتریان";
}

<div class="row">
    <div class="col-12">
        <div class="card card-primary card-outline">
            <div class="card-header">
                <h3 class="card-title">
                    <i class="fa fa-users ml-2"></i>
                    لیست مشتریان داروخانه
                </h3>
                <div class="card-tools">
                    <a asp-action="Create" class="btn btn-success btn-sm">
                        <i class="fa fa-plus ml-1"></i> ثبت مشتری جدید
                    </a>
                </div>
            </div>
            <div class="card-body table-responsive p-0">
                <table class="table table-hover text-nowrap table-striped">
                    <thead class="bg-light">
                        <tr>
                            <th>@Html.DisplayNameFor(model => model.NationalCode)</th>
                            <th>@Html.DisplayNameFor(model => model.FullName)</th>
                            <th>@Html.DisplayNameFor(model => model.MobileNumber)</th>
                            <th>@Html.DisplayNameFor(model => model.Sex)</th>
                            <th>@Html.DisplayNameFor(model => model.Birthday)</th>
                            <th>@Html.DisplayNameFor(model => model.RegisterDate)</th>
                            <th class="text-center">عملیات</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@Html.DisplayFor(modelItem => item.NationalCode)</td>
                                <td class="font-weight-bold text-primary">@Html.DisplayFor(modelItem => item.FullName)</td>
                                <td>@Html.DisplayFor(modelItem => item.MobileNumber)</td>
                                <td>
                                    @if (item.Sex == "مرد")
                                    {
                                        <span class="badge badge-info">مرد</span>
                                    }
                                    else
                                    {
                                        <span class="badge badge-warning">زن</span>
                                    }
                                </td>
                                <td>@Html.DisplayFor(modelItem => item.Birthday)</td>
                                <td>@Html.DisplayFor(modelItem => item.RegisterDate)</td>
                                <td class="text-center">
                                    <div class="btn-group btn-group-sm">
                                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning" title="ویرایش">
                                            <i class="fa fa-edit"></i>
                                        </a>
                                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info" title="جزئیات">
                                            <i class="fa fa-eye"></i>
                                        </a>
                                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger" title="حذف">
                                            <i class="fa fa-trash"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
            @if (!Model.Any())
            {
                <div class="alert alert-info m-3">
                    <i class="fa fa-info-circle ml-1"></i>
                    هنوز هیچ مشتری‌ای ثبت نشده است.
                </div>
            }
        </div>
    </div>
</div>