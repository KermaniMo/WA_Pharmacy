@model WA_Pharmacy.DTOs.Customer.CustomerListDto

@{
    ViewData["Title"] = "جزئیات مشتری";
}

<div class="row justify-content-center">
    <div class="col-md-8">
        <div class="card card-primary card-outline">
            <div class="card-header">
                <h3 class="card-title">
                    <i class="fa fa-id-card ml-1"></i>
                    پرونده اطلاعات مشتری
                </h3>
            </div>

            <div class="card-body p-0">
                <table class="table table-striped table-bordered table-hover">
                    <tbody>
                        <tr>
                            <th style="width: 30%">@Html.DisplayNameFor(model => model.NationalCode)</th>
                            <td>@Html.DisplayFor(model => model.NationalCode)</td>
                        </tr>
                        <tr>
                            <th>@Html.DisplayNameFor(model => model.FullName)</th>
                            <td class="font-weight-bold text-primary">@Html.DisplayFor(model => model.FullName)</td>
                        </tr>
                        <tr>
                            <th>@Html.DisplayNameFor(model => model.MobileNumber)</th>
                            <td>
                                <a href="tel:@Model.MobileNumber" class="text-dark">
                                    <i class="fa fa-phone ml-1 text-muted"></i>
                                    @Html.DisplayFor(model => model.MobileNumber)
                                </a>
                            </td>
                        </tr>
                        <tr>
                            <th>@Html.DisplayNameFor(model => model.Sex)</th>
                            <td>
                                @if (Model.Sex == "مرد")
                                {
                                    <span class="badge badge-info"><i class="fa fa-male ml-1"></i> مرد</span>
                                }
                                else
                                {
                                    <span class="badge badge-warning"><i class="fa fa-female ml-1"></i> زن</span>
                                }
                            </td>
                        </tr>
                        <tr>
                            <th>@Html.DisplayNameFor(model => model.Birthday)</th>
                            <td>@Html.DisplayFor(model => model.Birthday)</td>
                        </tr>
                        <tr>
                            <th>@Html.DisplayNameFor(model => model.RegisterDate)</th>
                            <td>@Html.DisplayFor(model => model.RegisterDate)</td>
                        </tr>
                    </tbody>
                </table>
            </div>
            <div class="card-footer bg-white">
                <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-warning px-4 float-right">
                    <i class="fa fa-edit ml-1"></i> ویرایش اطلاعات
                </a>
                <a asp-action="Index" class="btn btn-secondary float-left">
                    <i class="fa fa-arrow-left ml-1"></i> بازگشت به لیست
                </a>
            </div>
        </div>
    </div>
</div>