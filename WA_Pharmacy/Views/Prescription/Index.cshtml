@model IEnumerable<WA_Pharmacy.DTOs.Prescription.PrescriptionDto>

@{
    ViewData["Title"] = "مدیریت نسخه‌ها";
}

<div class="row">
    <div class="col-12">
        <div class="card card-primary card-outline">
            <div class="card-header">
                <h3 class="card-title">
                    <i class="fa fa-file-prescription ml-2"></i>
                    لیست نسخه‌های داروخانه
                </h3>
                <div class="card-tools">
                    <a asp-action="Create" class="btn btn-success btn-sm">
                        <i class="fa fa-plus ml-1"></i> ثبت نسخه جدید
                    </a>
                </div>
            </div>
            <div class="card-body table-responsive p-0">
                <table class="table table-hover text-nowrap table-striped">
                    <thead class="bg-light">
                        <tr>
                            <th>@Html.DisplayNameFor(model => model.TrackingCode)</th>
                            <th>@Html.DisplayNameFor(model => model.CustomerFullName)</th>
                            <th>@Html.DisplayNameFor(model => model.DoctorName)</th>
                            <th>تعداد اقلام دارو</th>
                            <th>@Html.DisplayNameFor(model => model.TotalPrice)</th>
                            <th class="text-center">عملیات</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@Html.DisplayFor(modelItem => item.TrackingCode)</td>
                                <td class="font-weight-bold text-primary">@Html.DisplayFor(modelItem => item.CustomerFullName)</td>
                                <td>@Html.DisplayFor(modelItem => item.DoctorName)</td>
                                <td>
                                    <span class="badge badge-info text-md px-3 py-1">
                                        @(item.MedicineList?.Count ?? 0) قلم
                                    </span>
                                </td>
                                <td class="text-success font-weight-bold">@Html.DisplayFor(modelItem => item.TotalPrice)</td>
                                <td class="text-center">
                                    <div class="btn-group btn-group-sm">
                                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning" title="ویرایش">
                                            <i class="fa fa-edit"></i>
                                        </a>
                                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info" title="جزئیات">
                                            <i class="fa fa-eye"></i>
                                        </a>
                                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger" title="حذف">
                                            <i class="fa fa-trash"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
            @if (!Model.Any())
            {
                <div class="alert alert-info m-3">
                    <i class="fa fa-info-circle ml-1"></i>
                    هنوز هیچ نسخه‌ای ثبت نشده است.
                </div>
            }
        </div>
    </div>
</div>
